<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeverEmptyBag.FormulaireCreation.FormItems">
    <ContentPage.Content>
        <StackLayout>
           <Label Text="Ajouter un Item : " FontSize="Large" />
            <Entry Placeholder="Name" x:Name="item_Name" />
            <Editor Text="Description" AutoSize="TextChanges" x:Name="item_Description"/>
            <Entry Placeholder="Nombre de charges" Keyboard="Numeric" x:Name="item_nbCharges" />
            <Label Text="propriété Magique :" FontSize="Large"/><Switch IsToggled="false" x:Name="item_propMagique"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>