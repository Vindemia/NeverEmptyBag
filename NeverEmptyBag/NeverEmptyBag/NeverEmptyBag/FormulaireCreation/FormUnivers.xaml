<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NeverEmptyBag.FormulaireCreation.FormUnivers">
    <ContentPage.Content>
      <StackLayout>
            <Label Text="Créer un Univers :" FontSize="Large"/>
            <Entry Placeholder="Nom" x:Name="univ_name" />
            <Entry Placeholder="Type" x:Name="univ_Type"/>
            <Editor Text="Description" AutoSize="TextChanges" x:Name="univ_Description"/>
            <Entry Placeholder="Jeu" x:Name="univ_Jeu" />
            <Button Text="Submit" x:Name="btn_valider" Clicked="Btn_valider_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>